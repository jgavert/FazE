// external base
.extBasePath              = ' /LIBPATH:^"$FazEPath$/externals/'
#if __LINUX__
.extBasePath              = ' -L ^"$FazEPath$/externals/'
#endif
.extEndBasePath           = '"'
.extLibPrefix             = ' '
.extLibPostfix            = '.lib'
#if __LINUX__
.extLibPrefix             = ' -l '
.extLibPostfix            = ''
#endif
.extIncludeDir            = '$FazEPath$/externals/'
.extVisualStudioDefines   = ''
.extDefines               = ''
.extLibPaths              = ''

.extRelLibs               = ''
.extDebLibs               = ''

/////////////////////////////////
// ADD DEPENDENCIES AFTER THIS //
/////////////////////////////////


// vkhpp (vulkan cpp bindings)

.vulkanCppInclude = .extIncludeDir
                  + 'Vulkan-Hpp'

.extVisualStudioDefines + 'VK_USE_PLATFORM_WIN32_KHR;'

#if __WINDOWS__
.extDefines       + ' /DVK_USE_PLATFORM_WIN32_KHR'
#endif

//////////////////////////////////////////////

// vulkan

.vulkanInclude  = '$VulkanSDKBasePath$/include'
.vulkanLibPath  = ' /LIBPATH:^"$VulkanSDKBasePath$/bin'
                + .extEndBasePath
.vulkanlibs     = ''
#if __WINDOWS__
                + .extLibPrefix + 'vulkan-1' + .extLibPostfix
#endif
#if __LINUX__
                + .extLibPrefix + 'vulkan' + .extLibPostfix
#endif


//////////////////////////////////////////////

// google/shaderc... my god this has big libs :D

.shadercLibPath = .extBasePath
                + "shaderc/lib"
                + .extEndBasePath
.shadercInclude = .extIncludeDir
                + "shaderc/include"

.shadercLibDebug  = .extLibPrefix
                  + 'shaderc_combined_d'
                  + .extLibPostfix
.shadercLibRelease  = .extLibPrefix
                    + 'shaderc_combined'
                    + .extLibPostfix


// Compressonator

#if __WINDOWS__
.compressLibPath = .extBasePath
                + "Compressonator/lib"
                + .extEndBasePath
.compressInclude = .extIncludeDir
                + "Compressonator/include"
.compressLibDebug  = .extLibPrefix
                  + 'Compressonator_MDd'
                  + .extLibPostfix
.compressLibRelease  = .extLibPrefix
                    + 'Compressonator_MD'
                    + .extLibPostfix
#endif

// Renderdoc

.renderdocInclude = .extIncludeDir
                  + "renderdoc/include"

///////////////////////////////////
// ADD INFO TO GLOBAL VARIABLES  //
///////////////////////////////////
.extRelLibs   + .vulkanlibs
              + .shadercLibRelease
.extDebLibs   + .vulkanlibs
              + .shadercLibDebug

#if __WINDOWS__
.extRelLibs   + .compressLibRelease
.extDebLibs   + .compressLibDebug
#endif

// these 2 are automatically in right place
#if __WINDOWS__
.extLibPaths  + .vulkanLibPath
              + .shadercLibPath
              + .compressLibPath
#endif
#if __LINUX__
.extLibPaths  + .shadercLibPath
#endif
.externalIncludes = ' /I^"$vulkanInclude$"'
                  + ' /I^"$vulkanCppInclude$"'
                  + ' /I^"$shadercInclude$"'
                  + ' /I^"$compressInclude$"'
                  + ' /I^"$renderdocInclude$"'
#if __LINUX__
.externalIncludes = ' -isystem ^"$vulkanInclude$"'
                  + ' -isystem ^"$vulkanCppInclude$"'
                  + ' -isystem ^"$shadercInclude$"'
#endif
.externalIncludesVisualStudio = '$vulkanInclude$;'
                              + '$vulkanCppInclude$;'
                              + '$shadercInclude$;'
                              + '$compressInclude$;'
                              + '$renderdocInclude$;'
