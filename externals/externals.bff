///////////////////////////////////
// ADD INFO TO GLOBAL VARIABLES  //
///////////////////////////////////

// these 2 are automatically in right place
#if __WINDOWS__
.extLibPaths  + .vulkanLibPath
              + .oculuslibPath
              + .oculuskernellibPath
              + .shadercLibPath
//              + .spirvxLibPath
#endif
#if __LINUX__
.extLibPaths  + .vulkanLibPath
              + .shadercLibPath
//              + .spirvxLibPath
#endif
.externalIncludes = ' /I^"$oculusInclude$"'
                  + ' /I^"$oculusKernelInclude$"'
                  + ' /I^"$vulkanInclude$"'
                  + ' /I^"$vulkanCppInclude$"'
                  + ' /I^"$direntInclude$"'
                  + ' /I^"$shadercInclude$"'
//                  + ' /I^"$spirvxInclude$"'
#if __LINUX__
.externalIncludes = ''
//                  + ' -I ^"$oculusInclude$"'
//                  + ' -I ^"$oculusKernelInclude$"'
//                  + ' -I ^"$vulkanInclude$"'
                  + ' -isystem ^"$vulkanCppInclude$"'
                  + ' -isystem ^"$direntInclude$"'
                  + ' -isystem ^"$shadercInclude$"'
//                  + ' -isystem ^"$spirvxInclude$"'
#endif
.externalIncludesVisualStudio = '$oculusInclude$;'
                              + '$oculusKernelInclude$;'
                              + '$vulkanInclude$;'
                              + '$vulkanCppInclude$;'
                              + '$direntInclude$;'
                              + '$shadercInclude$;'
