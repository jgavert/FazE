// external base
.extBasePath              = ' /LIBPATH:^"$FazEPath$/externals/'
#if __LINUX__
.extBasePath              = ' -L ^"$FazEPath$/externals/'
#endif
.extEndBasePath           = '"'
.extLibPrefix             = ' '
.extLibPostfix            = '.lib'
#if __LINUX__
.extLibPrefix             = ' -l '
.extLibPostfix            = ''
#endif
.extIncludeDir            = '$FazEPath$/externals/'
.extVisualStudioDefines   = ''
.extDefines               = ''
.extLibPaths              = ''

/////////////////////////////////
// ADD DEPENDENCIES AFTER THIS //
/////////////////////////////////

// OCULUS DEPENDENCIES

// libOVRkernel probably deprecated soon
.oculusKernelInclude  = .extIncludeDir
                      + 'OculusSDK/LibOVRKernel/src'
.oculuskernellibPath  = .extBasePath
                      + 'OculusSDK/LibOVRKernel/Lib'
                      + .extEndBasePath
.oculuslibDebug       = .extLibPrefix
                      + 'LibOVRKerneld' + .extLibPostfix
.oculuslibRelDeb      = .extLibPrefix
                      + 'LibOVRKernel' + .extLibPostfix
.oculuslibRelease     = .extLibPrefix
                      + 'LibOVRKernel' + .extLibPostfix

// LibOVR
.oculusInclude  = .extIncludeDir
                + 'OculusSDK/LibOVR/Include'
.oculuslibPath  = .extBasePath
                + 'OculusSDK/LibOVR/Lib'
                + .extEndBasePath

// these need to be seperately be added for necessary projects,
.oculuslibDebug   + .extLibPrefix
                  + 'LibOVRd' + .extLibPostfix
.oculuslibRelDeb  + .extLibPrefix
                  + 'LibOVR' + .extLibPostfix
.oculuslibRelease + .extLibPrefix
                  + 'LibOVR' + .extLibPostfix

// C:\toki\code\Faze\externals\Vulkan-Hpp\vulkan
// VULKAN cpp
.vulkanCppInclude = .extIncludeDir
                  + 'Vulkan-Hpp'
.extVisualStudioDefines + 'VK_USE_PLATFORM_WIN32_KHR;'
//                        + 'VK_USE_PLATFORM_WIN32_KHR;'
#if __WINDOWS__
.extDefines       + ' /DVK_USE_PLATFORM_WIN32_KHR'
//                  + ' /DVK_USE_PLATFORM_WIN32_KHR'
#endif
#if __LINUX__
//.extDefines       + ' -DVKCPP_ENHANCED_MODE'
#endif

// VULKAN
.vulkanInclude  = '$VulkanSDKBasePath$/include'
.vulkanLibPath  = ' /LIBPATH:^"$VulkanSDKBasePath$/bin'
#if __LINUX__
.vulkanLibPath  = ' -L ^"$VulkanSDKBasePath$/bin/'
#endif
                + .extEndBasePath
.vulkanlibs     = ''
#if __WINDOWS__
                + .extLibPrefix + 'vulkan-1' + .extLibPostfix
#endif
#if __LINUX__
                + .extLibPrefix + 'vulkan' + .extLibPostfix
#endif

// DIRENT.h
.direntInclude  = .extIncludeDir
                + "dirent/include"

// google/shaderc... my god this has big libs :D
.shadercLibPath = .extBasePath
                + "shaderc/lib"
                + .extEndBasePath
.shadercInclude = .extIncludeDir
                + "shaderc/include"

.shadercLibDebug  = .extLibPrefix
                  + 'shaderc_combined_d'
                  + .extLibPostfix
.shadercLibRelease  = .extLibPrefix
                    + 'shaderc_combined'
                    + .extLibPostfix

