// external base
.extBasePath              = ' /LIBPATH:^"$FazEPath$/externals/'
#if __LINUX__
.extBasePath              = ' -L ^"$FazEPath$/externals/'
#endif
.extEndBasePath           = '"'
.extLibPrefix             = ''
#if __LINUX__
.extLibPrefix             = ' -l '
#endif
.extIncludeDir            = '$FazEPath$/externals/'
.extVisualStudioDefines   = ''
.extDefines               = ''
.extLibPaths              = ''

/////////////////////////////////
// ADD DEPENDENCIES AFTER THIS //
/////////////////////////////////

// OCULUS DEPENDENCIES

// libOVRkernel probably deprecated soon
.oculusKernelInclude  = .extIncludeDir
                      + 'OculusSDK/LibOVRKernel/src'
.oculuskernellibPath  = .extBasePath
                      + 'OculusSDK/LibOVRKernel/Lib'
                      + .extEndBasePath
.oculuslibDebug       = .extLibPrefix
                      + ' LibOVRKerneld.lib'
.oculuslibRelDeb      = .extLibPrefix
                      + ' LibOVRKernel.lib'
.oculuslibRelease     = .extLibPrefix
                      + ' LibOVRKernel.lib'

// LibOVR
.oculusInclude  = .extIncludeDir
                + 'OculusSDK/LibOVR/Include'
.oculuslibPath  = .extBasePath
                + 'OculusSDK/LibOVR/Lib'
                + .extEndBasePath

// these need to be seperately be added for necessary projects,
.oculuslibDebug   + .extLibPrefix
                  + ' LibOVRd.lib'
.oculuslibRelDeb  + .extLibPrefix
                  + ' LibOVR.lib'
.oculuslibRelease + .extLibPrefix
                  + ' LibOVR.lib'

// VULKAN cpp
.vulkanCppInclude = .extIncludeDir
                  + 'vkcpp'
.extVisualStudioDefines + 'VKCPP_ENHANCED_MODE;'
                        + 'VK_USE_PLATFORM_WIN32_KHR;'
#if __WINDOWS__
.extDefines       + ' /DVKCPP_ENHANCED_MODE'
                  + ' /DVK_USE_PLATFORM_WIN32_KHR'
#endif
#if __LINUX__
                  + ' -DVKCPP_ENHANCED_MODE'
#endif

// VULKAN
.vulkanInclude  = '$VulkanSDKBasePath$/include'
.vulkanLibPath  = ' /LIBPATH:^"$VulkanSDKBasePath$/bin'
#if __LINUX__
.vulkanLibPath  = ' -L ^"$VulkanSDKBasePath$/bin/'
#endif
                + .extEndBasePath
.vulkanlibs     = .extLibPrefix + ' vulkan-1.lib'
                + .extLibPrefix + ' layer_utils.lib'
                + .extLibPrefix + ' VkLayer_api_dump.lib'
                + .extLibPrefix + ' VkLayer_device_limits.lib'
                + .extLibPrefix + ' VkLayer_draw_state.lib'
                + .extLibPrefix + ' VkLayer_image.lib'
                + .extLibPrefix + ' VkLayer_mem_tracker.lib'
                + .extLibPrefix + ' VkLayer_object_tracker.lib'
                + .extLibPrefix + ' VkLayer_param_checker.lib'
                + .extLibPrefix + ' VkLayer_screenshot.lib'
                + .extLibPrefix + ' VkLayer_swapchain.lib'
                + .extLibPrefix + ' VkLayer_threading.lib'
                + .extLibPrefix + ' VkLayer_unique_objects.lib'

///////////////////////////////////
// ADD INFO TO GLOBAL VARIABLES  //
///////////////////////////////////

// these 2 are automatically in right place
.extLibPaths  + .oculuslibPath
              + .oculuskernellibPath
              + .vulkanLibPath
.externalIncludes = ' /I^"$oculusInclude$"'
                  + ' /I^"$oculusKernelInclude$"'
                  + ' /I^"$vulkanInclude$"'
                  + ' /I^"$vulkanCppInclude$"'
#if __LINUX__
.externalIncludes = ' -I ^"$oculusInclude$"'
                  + ' -I ^"$oculusKernelInclude$"'
                  + ' -I ^"$vulkanInclude$"'
                  + ' -I ^"$vulkanCppInclude$"'
#endif
.externalIncludesVisualStudio = '$oculusInclude$;'
                              + '$oculusKernelInclude$;'
                              + '$vulkanInclude$;'
                              + '$vulkanCppInclude$;'
