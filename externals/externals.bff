// external base
.extBasePath              = ' /LIBPATH:^"$FazEPath$/externals/'
#if __LINUX__
.extBasePath              = ' -L ^"$FazEPath$/externals/'
#endif
.extEndBasePath           = '"'
.extLibPrefix             = ' '
.extLibPostfix            = '.lib'
#if __LINUX__
.extLibPrefix             = ' -l '
.extLibPostfix            = ''
#endif
.extIncludeDir            = '$FazEPath$/externals/'
.extVisualStudioDefines   = ''
.extDefines               = ''
.extRelLibPaths              = ''
.extDebLibPaths              = ''

.extRelLibs               = ''
.extDebLibs               = ''

/////////////////////////////////
// ADD DEPENDENCIES AFTER THIS //
/////////////////////////////////


// vkhpp (vulkan cpp bindings)

.vulkanCppInclude = .extIncludeDir
                  + 'Vulkan-Hpp'

.extVisualStudioDefines + 'VK_USE_PLATFORM_WIN32_KHR;'
						+ 'VULKAN_HPP_NO_SMART_HANDLE;'

#if __WINDOWS__
.extDefines       + ' /DVK_USE_PLATFORM_WIN32_KHR'
				  + ' /DVULKAN_HPP_NO_SMART_HANDLE'
#endif

//////////////////////////////////////////////

// vulkan

.vulkanInclude  = '$VulkanSDKBasePath$/include'
.vulkanLibPath  = ' /LIBPATH:^"$VulkanSDKBasePath$/Lib'
                + .extEndBasePath
.vulkanlibs     = ''
#if __WINDOWS__
                + .extLibPrefix + 'vulkan-1' + .extLibPostfix
#endif
#if __LINUX__
                + .extLibPrefix + 'vulkan' + .extLibPostfix
#endif


//////////////////////////////////////////////

// google/shaderc... my god this has big libs :D

.shadercLibPath = .extBasePath
                + "shaderc/lib"
                + .extEndBasePath
.shadercInclude = .extIncludeDir
                + "shaderc/include"

.shadercLibDebug  = .extLibPrefix
                  + 'shaderc_combined_d'
                  + .extLibPostfix
                  + .extLibPrefix
                  + 'shaderc_d'
                  + .extLibPostfix
.shadercLibRelease  = .extLibPrefix
                    + 'shaderc_combined_r'
                    + .extLibPostfix
                    + .extLibPrefix
                    + 'shaderc_r'
                    + .extLibPostfix


// dxcompiler

.dxcDebLibPath = .extBasePath
            + "hlsl.bin/Debug/lib"
            + .extEndBasePath
.dxcRelLibPath = .extBasePath
            + "hlsl.bin/Release/lib"
            + .extEndBasePath
.dxcInclude = .extIncludeDir
            + "DirectXShaderCompiler/include"

.dxcLibDebug  = .extLibPrefix
              + 'dxcompiler'
              + .extLibPostfix
.dxcLibRelease  = .extLibPrefix
                + 'dxcompiler'
                + .extLibPostfix


// Compressonator

.compressLibPath = .extBasePath
                + "Compressonator/lib"
                + .extEndBasePath
.compressInclude = .extIncludeDir
                + "Compressonator/include"
.compressLibDebug  = .extLibPrefix
                  + 'Compressonator_MDd'
                  + .extLibPostfix
.compressLibRelease  = .extLibPrefix
                    + 'Compressonator_MD'
                    + .extLibPostfix

// Renderdoc

.renderdocInclude = .extIncludeDir
                  + "renderdoc/include"

// stb

.stbInclude = .extIncludeDir
                  + "stb"

// winpixeventruntime
#if __WINDOWS__
.pixInclude = .extIncludeDir
            + "winpixeventruntime/include"

.pixLibPath = .extBasePath
            + "winpixeventruntime/lib"
            + .extEndBasePath

.pixLib  = .extLibPrefix
         + 'WinPixEventRuntime'
         + .extLibPostfix
#endif

// googletest, not global.

.gtestInclude = .extIncludeDir
              + "googletest/googletest/include"

.gtest2Include = .extIncludeDir
              + "googletest/googletest"

.gtestDebLibPath = .extBasePath
            + "gtest_build/googlemock/gtest"
            + .extEndBasePath

.gtestRelLibPath = .gtestDebLibPath

.gtestRelLib  = .extLibPrefix
              + 'gtest'
              + .extLibPostfix

.gtestDebLib  = .extLibPrefix
              + 'gtest'
              + .extLibPostfix
#if __WINDOWS__
.gtestDebLibPath = .extBasePath
            + "gtest_build/googletest/Debug"
            + .extEndBasePath

.gtestRelLibPath = .extBasePath
            + "gtest_build/googletest/RelWithDebInfo"
            + .extEndBasePath

.gtestDebLib  = .extLibPrefix
              + 'gtestd'
              + .extLibPostfix
#endif


///////////////////////////////////
// ADD INFO TO GLOBAL VARIABLES  //
///////////////////////////////////
.extRelLibs   + .vulkanlibs
              + .shadercLibRelease
#if __WINDOWS__
              + .dxcLibRelease
#endif
.extDebLibs   + .vulkanlibs
              + .shadercLibDebug
#if __WINDOWS__
              + .dxcLibDebug
#endif

.extRelDlls = {}
#if __WINDOWS__
.extRelDlls = {"externals/hlsl.bin/Release/bin/dxcompiler.dll", '$WindowsSDKBasePath10$/bin/$WindowsSDKSubVersion$/x64/DXIL.dll', "externals/winpixeventruntime/lib/WinPixEventRuntime.dll", }
#endif

#if __WINDOWS__
.extRelLibs   + .pixLib
.extDebLibs   + .pixLib
#endif

// these 2 are automatically in right place
#if __WINDOWS__
.extDebLibPaths  + .vulkanLibPath
              + .shadercLibPath
              + .dxcDebLibPath
              + .pixLibPath
              //+ .compressLibPath
.extRelLibPaths  + .vulkanLibPath
                 + .shadercLibPath
                 + .dxcRelLibPath
                 + .pixLibPath
              //+ .compressLibPath
#endif
#if __LINUX__
.extDebLibPaths  + .shadercLibPath
.extRelLibPaths  + .shadercLibPath
#endif
.externalIncludes = ' /I^"$vulkanInclude$"'
                  + ' /I^"$shadercInclude$"'
                  + ' /I^"$dxcInclude$"'
//                  + ' /I^"$compressInclude$"'
                  + ' /I^"$renderdocInclude$"'
                  + ' /I^"$stbInclude$"'
#if __WINDOWS__
                  + ' /I^"$pixInclude$"'
#endif


#if __LINUX__
.externalIncludes = ' -isystem ^"$vulkanInclude$"'
                  + ' -isystem ^"$vulkanCppInclude$"'
                  + ' -isystem ^"$shadercInclude$"'
                  + ' -isystem ^"$stbInclude$"'
#endif
.externalIncludesVisualStudio = '$vulkanInclude$;'
                              + '$shadercInclude$;'
                              + '$dxcInclude$;'
//                              + '$compressInclude$;'
                              + '$renderdocInclude$;'
                              + '$stbInclude$;'
#if __WINDOWS__
                              + '$pixInclude$;'
#endif
