// external base
.extBasePath	= ' /LIBPATH:^"$FazEPath$/externals/'
.extEndBasePath = '"'
.extIncludeDir	= '$FazEPath$/externals/'
.extDefines		= ''
.extLibPaths	= ''

/////////////////////////////////
// ADD DEPENDENCIES AFTER THIS //
/////////////////////////////////

// OCULUS DEPENDENCIES

// libOVRkernel probably deprecated soon
.oculusKernelInclude	= .extIncludeDir
						+ 'OculusSDK/LibOVRKernel/src'
.oculuskernellibPath    = .extBasePath
						+ 'OculusSDK/LibOVRKernel/Lib'
						+ .extEndBasePath
.oculuslibDebug			= ' LibOVRKerneld.lib'
.oculuslibRelDeb		= ' LibOVRKernel.lib'
.oculuslibRelease		= ' LibOVRKernel.lib'

// LibOVR
.oculusInclude	= .extIncludeDir
				+ 'OculusSDK/LibOVR/Include'
.oculuslibPath	= .extBasePath
				+ 'OculusSDK/LibOVR/Lib'
				+ .extEndBasePath

// these need to be seperately be added for necessary projects, 
.oculuslibDebug		+ ' LibOVRd.lib'
.oculuslibRelDeb	+ ' LibOVR.lib'
.oculuslibRelease	+ ' LibOVR.lib'

// VULKAN cpp
.vulkanCppInclude	= .extIncludeDir
					+ 'Vulkan/include'

// VULKAN 
.vulkanInclude	= '$VulkanSDKBasePath$/include'
.vulkanLibPath	= ' /LIBPATH:^"$VulkanSDKBasePath$/bin'
				+ .extEndBasePath
.vulkanlibs	= ' vulkan-1.lib'
			+ ' layer_utils.lib'
			+ ' VkLayer_api_dump.lib'
			+ ' VkLayer_device_limits.lib'
			+ ' VkLayer_draw_state.lib'
			+ ' VkLayer_image.lib'
			+ ' VkLayer_mem_tracker.lib'
			+ ' VkLayer_object_tracker.lib'
			+ ' VkLayer_param_checker.lib'
			+ ' VkLayer_screenshot.lib'
			+ ' VkLayer_swapchain.lib'
			+ ' VkLayer_threading.lib'
			+ ' VkLayer_unique_objects.lib'

///////////////////////////////////
// ADD INFO TO GLOBAL VARIABLES  //
///////////////////////////////////

// these 2 are automatically in right place
.extLibPaths 					+ .oculuslibPath
								+ .oculuskernellibPath
								+ .vulkanLibPath
.externalIncludes				= ' /I^"$oculusInclude$"'
								+ ' /I^"$oculusKernelInclude$"'
								+ ' /I^"$vulkanInclude$"'
								+ ' /I^"$vulkanCppInclude$"'
.externalIncludesVisualStudio	= '$oculusInclude$;'
								+ '$oculusKernelInclude$;'
								+ '$vulkanInclude$;'
								+ '$vulkanCppInclude$;'

