{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test main(bazel dbg)",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
                "build", "test_main" , "--compilation_mode=dbg"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test main(bazel build)",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
                "build", "test_main", "--compilation_mode=fastbuild", "--strip=never"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test main(bazel opt)",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
                "build", "test_main" , "--compilation_mode=opt", "--strip=never"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build benchmarks(bazel opt)",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
                "build", "//benchmarks/..." , "--compilation_mode=opt" , "--strip=never"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test graphics(bazel dbg)",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
                "build", "tests:all-graphics-tests" , "--compilation_mode=dbg"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test graphics(bazel)",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
                "build", "tests:all-graphics-tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test core(bazel dbg)",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
              "build", "tests:all-core-tests" , "--compilation_mode=dbg", "--strip=never"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel clean",
            "type": "shell",
            "command": "bazel.exe",
            "args": [
                "clean", "--expunge"
            ]
        }
    ]
}